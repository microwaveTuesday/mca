using System;

class Program
{
    static void Main()
    {
        // Step 1: Create an array to store 5 fruits
        string[] fruits = new string[5];
        int appleCount = 0;

        // Step 2: Ask the user to enter 5 fruits
        for (int i = 0; i < fruits.Length; i++)
        {
            Console.Write("Enter favorite fruit #" + (i + 1) + ": ");
            string input = Console.ReadLine();

            // Step 3: Convert input to lowercase and store in array
            fruits[i] = input.ToLower();

            // Step 4: Check if it's "apple"
            if (fruits[i] == "apple")
            {
                appleCount++;
            }
        }

        // Step 5: Display all fruits entered
        Console.WriteLine("\nYour favorite fruits are:");
        foreach (string fruit in fruits)
        {
            Console.WriteLine("- " + fruit);
        }

        // Step 6: Display how many times "apple" was entered
        Console.WriteLine("\nYou entered 'apple' " + appleCount + " time(s).");
    }
}
