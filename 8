using System;

class Program
{
    static void Main()
    {
        string[] passwords = new string[4];

        Console.WriteLine("Enter 4 passwords to validate:");
        
        // Input 4 passwords
        for (int i = 0; i < passwords.Length; i++)
        {
            Console.Write($"Password #{i + 1}: ");
            passwords[i] = Console.ReadLine();
        }

        Console.WriteLine("\n--- Password Validation Results ---");

        // Validate each password
        foreach (string password in passwords)
        {
            bool isLongEnough = password.Length >= 6;
            bool hasUppercase = false;

            // Check for uppercase letter
            foreach (char c in password)
            {
                if (char.IsUpper(c))
                {
                    hasUppercase = true;
                    break;
                }
            }

            // Final validation
            if (isLongEnough && hasUppercase)
                Console.WriteLine($"\"{password}\" is Valid");
            else
                Console.WriteLine($"\"{password}\" is Invalid");
        }
    }
}
