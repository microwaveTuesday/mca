#include <iostream>
#include <bitset>
using namespace std;

// Function to check if number is prime
bool isPrime(int n) {
    if (n <= 1) return false;
    for (int i = 2; i * i <= n; ++i) {
        if (n % i == 0)
            return false;
    }
    return true;
}

int main() {
    const int SIZE = 8;
    int numbers[SIZE];

    cout << "Enter 8 whole numbers:\n";
    for (int i = 0; i < SIZE; i++) {
        cout << "Number " << i + 1 << ": ";
        cin >> numbers[i];
    }

    cout << "\nAnalysis:\n";
    for (int i = 0; i < SIZE; i++) {
        int num = numbers[i];
        bool prime = isPrime(num);
        string binary = bitset<8>(num).to_string(); // convert to 8-bit binary
        string evenOdd = (num % 2 == 0) ? "Even" : "Odd";

        cout << "Number: " << num << "\n";
        cout << " - Prime: " << (prime ? "Yes" : "No") << "\n";
        cout << " - Binary: " << binary << "\n";
        cout << " - Even/Odd: " << evenOdd << "\n";
        cout << "-----------------------\n";
    }

    return 0;
}
