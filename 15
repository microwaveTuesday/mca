#include <iostream>
using namespace std;

int main() {
    const int totalUsers = 20;
    int luckyNumbers[totalUsers];
    const int winningNumbers[] = {7, 13, 28, 42, 69}; // Predefined winning numbers
    const int totalWinners = 5;

    cout << "Enter your lucky number (1 to 99):" << endl;

    // Input lucky numbers
    for (int i = 0; i < totalUsers; i++) {
        int number;
        cout << "User " << i + 1 << ": ";
        cin >> number;

        // Validate number
        if (number < 1 || number > 99) {
            cout << "Invalid number! Please enter between 1 and 99.\n";
            i--; // Ask again
        } else {
            luckyNumbers[i] = number;
        }
    }

    cout << "\nChecking for winners...\n";

    // Check and display results
    for (int i = 0; i < totalUsers; i++) {
        bool isWinner = false;

        // Check if lucky number is in winningNumbers
        for (int j = 0; j < totalWinners; j++) {
            if (luckyNumbers[i] == winningNumbers[j]) {
                isWinner = true;
                break;
            }
        }

        if (isWinner) {
            cout << "User " << i + 1 << " picked " << luckyNumbers[i] << " - 🎉 Congratulations! You're a winner!\n";
        } else {
            cout << "User " << i + 1 << " picked " << luckyNumbers[i] << " - Sorry, not a winning number.\n";
        }
    }

    return 0;
}
